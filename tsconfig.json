{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2016",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "rootDir": "./src",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
          "*": ["node_modules/*", "src/types/*"]
      }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]

  }